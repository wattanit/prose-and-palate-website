---
import { Image } from "astro:assets";
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        src={src ? src : logo}
        alt={title}
        style={{
          height: logo_height.replace("px", "") + "px",
          width: logo_width.replace("px", "") + "px",
        }}
      />
    ) : logo_text ? (
      <span class="text-2xl md:text-3xl font-bold text-dark font-primary tracking-wide hover:text-primary transition-colors duration-300">
        {logo_text}
      </span>
    ) : (
      <span class="text-2xl md:text-3xl font-bold text-dark font-primary tracking-wide hover:text-primary transition-colors duration-300">
        {title}
      </span>
    )
  }
</a>
